<?xml version="1.0" encoding="utf-8"?>
<com.keltapps.soundprofile.views.RippleView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/bluetooth_item_cardview"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        app:cardMaxElevation="2dp"
        card_view:cardCornerRadius="0dp"
        card_view:cardElevation="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/bluetooth_item_imageview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:src="@drawable/ic_bluetooth_purple_800_24dp" />

            <TextView
                android:id="@+id/bluetooth_item_textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@+id/bluetooth_item_checkbox"
                android:layout_toRightOf="@id/bluetooth_item_imageview"
                android:gravity="left|center"
                android:paddingLeft="20dp"
                android:text="CAR MULTIMEDIA"
                android:textSize="15sp" />

            <CheckBox
                android:id="@+id/bluetooth_item_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:theme="@style/CheckBoxWifi" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</com.keltapps.soundprofile.views.RippleView>
